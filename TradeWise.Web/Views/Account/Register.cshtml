@model TradeWise.Web.DTOs.RegisterDto
@{
    ViewData["Title"] = "Registro - TradeWise";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">📝 Criar Conta</h2>
                <p class="text-center text-muted">Comece a investir em criptomoedas</p>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="FirstName" class="form-label">👤 Nome</label>
                                <input asp-for="FirstName" class="form-control" placeholder="João" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="LastName" class="form-label">👥 Sobrenome</label>
                                <input asp-for="LastName" class="form-control" placeholder="Silva" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label">📧 Email</label>
                        <input asp-for="Email" class="form-control" placeholder="joao.silva@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label">🔑 Senha</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <small class="form-text text-muted">Mínimo 6 caracteres, incluindo um número</small>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">🔒 Confirmar Senha</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="alert alert-info">
                        <strong>🎁 Bônus de Boas-vindas:</strong> Você receberá $10.000 virtuais para começar!
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-success btn-lg">🚀 Criar Conta</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <p>Já tem conta? <a asp-action="Login">Fazer Login</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 